# Het IMBOR meta-model 
# --------------------
# The IMBOR metamodel, documented in Dutch.

PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX dc: <http://purl.org/dc/elements/1.1/>
PREFIX crow: <http://linkeddata.crow.nl/def/imbor#>

# Ontologie-header
# ----------------
# De formele introductie van het gehele model. Deze wordt integraal met de 
# ontologie meegegeven. 

<http://linkeddata.crow.nl/def/imbor/>
  a owl:Ontology ;
  rdfs:label "IMBOR" ;
  dc:title "IMBOR" ;
  rdfs:comment "Informatiemodel Beheer Openbare Ruimte: in Linked data-formaat"@nl-NL ;
  dc:description "Informatiemodel Beheer Openbare Ruimte: in Linked data-formaat"@nl-NL ;
  dc:language "nl" ;

  dc:publisher <http://crow.nl> ;
  rdfs:seeAlso <https://www.crow.nl/thema-s/management-openbare-ruimte/imbor> ;
  owl:imports 
    <https://w3id.org/def/basicsemantics-owl>
  , <http://www.w3.org/2004/02/skos/core>
  , <http://qudt.org/schema/qudt>
  , <http://qudt.org/vocab/unit>
  , <http://qudt.org/vocab/quantitykind>
  , <http://www.opengis.net/ont/geosparql>
  .

# Collecties
# ----------
# Er zijn verschillende verzamelingen gedefinieerd in IMBOR, die als skos:Collection
# terugkomen in IMBOR in Linked data-formaat. Ten behoeve van de organisatie van
# deze collecties, zijn er subclasses voor de verschillende collectietypes.

crow:VakdisciplineCollectie
  a rdfs:Class ;
  rdfs:subClassOf skos:Collection ;
  rdfs:label "Vakdiscipline"@nl-NL ;
  skos:prefLabel "Vakdiscipline"@nl-NL ;
  skos:definition "Collectie voor gerelateerde objecttypes"@nl-NL ;
  .

crow:HierarchischeCollectie
  a rdfs:Class ;
  rdfs:subClassOf skos:Collection ;
  rdfs:label "Hiërarchie"@nl-NL ;
  skos:prefLabel "Hiërarchie"@nl-NL ;
  skos:definition "Collectie voor hiërarchische objecttype-informatie"@nl-NL ;
  .

crow:ThematischeCollectie
  a rdfs:Class ;
  rdfs:subClassOf skos:Collection ;
  rdfs:label "Objecttypegroep"@nl-NL ;
  skos:prefLabel "Objecttypegroep"@nl-NL ;
  skos:definition "Collectie voor gelijkaardige objecttypegroepen"@nl-NL ;
  .

# Eigenschappen
# -------------
# IMBOR in Linked data maakt zo veel mogelijk gebruik van relaties gedefinieerd
# in andere ontologieën. Dat maakt het onderhoud aan en het gebruik van IMBOR 
# eenvoudiger. 

crow:guid
  a rdfs:Property , owl:ObjectProperty , owl:DeprecatedProperty ;
  rdfs:subPropertyOf dc:identifier ;
  rdfs:label "GUID"@nl-NL ;
  rdfs:comment "Unieke identifier (vervallen)"@nl-NL ;
  skos:editorialNote """Opgenomen vanuit IMBOR in Access-formaat voor
  conversiedoeleinden. In Linked data volstaat de URI van het concept."""@nl-NL ;
  .
